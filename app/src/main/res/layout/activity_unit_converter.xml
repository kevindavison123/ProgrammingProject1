<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UnitConverter">


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unit1"
            android:gravity="left"
            ></Spinner>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit2"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/unit1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Spinner>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value1"
            android:hint="Enter Numbers only"
        android:layout_below="@+id/unit2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit3"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/value1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Spinner>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:gravity="bottom"
        android:hint="Where the conversion will be "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="139dp" />



</RelativeLayout>
